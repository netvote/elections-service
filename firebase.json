{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "app",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {"source": "/vote/**", "function": "api"},
      {"source": "/demo/**", "function": "api"},
      {"source": "/admin/**", "function": "api"},
      {"source": "/util/**", "function": "api"},
      {"source": "/eth/**", "function": "api"},
      {"source": "/tally/**", "function": "api"}
    ]
  }
}
